unsigned long int VoiceArray[7] = {
   40235, 43266, 46645, 49810, 53291, 56306, 59604,
};

unsigned long int voiceDelay[7] = { 
  1796, 1909, 2027, 1857, 1748, 1667, 2193,
};



bool Note(int light, int x, int delay, const unsigned long int * clocks) {
  long int clock = clocks[x];

  if (millis() > clock + delay) {
    digitalWrite(light, LOW);
    return true;
  } else if (millis() > clock) {
    digitalWrite(light, HIGH);
  }

  return false;
}

int counterGuitar = 0;
int counterAcousticGuitar = 0;
int counterDrum = 0;
int counterVoice = 0;

int GuitarLed = 1;
int DrumLed = 4;
int AcousticGuitarLed = 7;

const int VoiceLed = 6;
int time = 0;

void loop() {
  if (Note(GuitarLed, counterGuitar, 100, GuitarArray)) {
    counterGuitar++;
    (GuitarLed == 3) ? GuitarLed = 0 : GuitarLed;
    GuitarLed++;
  }
  if (Note(DrumLed, counterDrum, 100, DrumArray)) {
    counterDrum++;
    (DrumLed == 5) ? DrumLed = 3 : DrumLed;
    DrumLed++;
  }

  if (Note(VoiceLed, counterVoice, voiceDelay[time], VoiceArray)) {
    counterVoice++;
    time++;
  }

  if (Note(AcousticGuitarLed, counterAcousticGuitar, 100, AcousticGuitarArray)) {
    counterAcousticGuitar++;
    (AcousticGuitarLed == 8) ? AcousticGuitarLed = 6 : AcousticGuitarLed;
    AcousticGuitarLed++;
  }
}
