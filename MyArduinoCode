bool melodyNote(int light, int x, int delay,
  const unsigned long int * timestamps) {
  long int timestamp = timestamps[x];

  if (millis() > timestamp + delay) {
    digitalWrite(light, LOW);
    return true;
  } else if (millis() > timestamp) {
    digitalWrite(light, HIGH);
  }

  return false;
}

int counterGuitar = 0;
int counterDrum = 0;
int GuitarLed = 1;
int DrumLed = 4;

void loop() {
  if (melodyNote(GuitarLed, counterGuitar, 100, listGuitar)) {
    counterGuitar++;
    (GuitarLed == 3) ? GuitarLed = 0: DrumLed;
    GuitarLed++;
  }
  if (melodyNote(DrumLed, counterDrum, 100, listDrum)) {
    counterDrum++;
    DrumLed = (DrumLed == 5) ? DrumLed = 3 : DrumLed;
    DrumLed++;
  }
};
